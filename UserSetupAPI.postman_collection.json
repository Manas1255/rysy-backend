	"item": [
		{
			"name": "1. Migrate User - New User ID Only",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"newUserId\": \"user-123-abc-def\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://usersetupapi-zoakaisvja-uc.a.run.app",
					"protocol": "https",
					"host": [
						"usersetupapi-zoakaisvja-uc",
						"a",
						"run",
						"app"
					]
				},
				"description": "Migrates user data using only newUserId. The function will find the existing user document by id field and migrate it."
			},
			"response": []
		},
		{
			"name": "2. Migrate User - With Old User ID",
